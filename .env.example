# ===========================================
# Renewal Reminders System - Environment Config
# ===========================================

# Application
APP_NAME=renewal-reminders
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://renewals_user:renewals_pass@localhost:5432/renewals_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (for Celery/caching)
REDIS_URL=redis://localhost:6379/0

# ===========================================
# AI Model Configuration (GitHub Models)
# ===========================================
# Get your GitHub PAT from: https://github.com/settings/tokens
# Required scopes: (no special scopes needed for GitHub Models)
GITHUB_TOKEN=your_github_personal_access_token

# Model Selection
# Recommended: openai/gpt-4.1-mini (good balance of quality/cost)
# Alternatives: openai/gpt-4.1, openai/gpt-4o-mini, microsoft/phi-4
AI_MODEL_ID=openai/gpt-4.1-mini
AI_MODEL_ENDPOINT=https://models.github.ai/inference

# Embedding Model (for RAG)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ===========================================
# Communication Channels
# ===========================================

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=renewals@yourcompany.com
SENDGRID_FROM_NAME=Renewal Reminders

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp (Twilio)
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# ===========================================
# Scheduler Configuration
# ===========================================
SCHEDULER_ENABLED=true
REMINDER_CHECK_INTERVAL_MINUTES=60

# Reminder windows (days before renewal)
REMINDER_WINDOWS=30,15,7,1

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ===========================================
# Security
# ===========================================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# RAG Configuration
# ===========================================
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_TOP_K_RESULTS=5
VECTOR_DIMENSION=384
